import React, { useState, useMemo } from 'react';
import { initializeBlock, useBase, useRecords, useSession, CellRenderer } from '@airtable/blocks/interface/ui';

// Field IDs
const POD_TABLE_ID = 'tbl4P2UbcOfOchYII';
const POD_NAME_FIELD_ID = 'fldud9Mnj0x1Nhj21';
const PRODUCT_MANAGER_FIELD_ID = 'fldDWMqB3DICxQGxx';
const SUMMARY_FIELD_ID = 'fldt4ZgCEz8OCaa2E';

function PodMonthlySummaryApp() {
    const base = useBase();
    const session = useSession();
    const currentUser = session.currentUser;

    const podTable = base.getTableByIdIfExists(POD_TABLE_ID);
    const allPods = useRecords(podTable || base.tables[0]);

    // Get fields
    const podNameField = podTable?.getFieldIfExists(POD_NAME_FIELD_ID);
    const productManagerField = podTable?.getFieldIfExists(PRODUCT_MANAGER_FIELD_ID);
    const summaryField = podTable?.getFieldIfExists(SUMMARY_FIELD_ID);

    // Filter states - default PM filter to 'current_user'
    const [pmFilter, setPmFilter] = useState('current_user'); // 'all', 'current_user', or a specific user ID
    const [selectedPodId, setSelectedPodId] = useState(null);

    // Editing states
    const [isEditing, setIsEditing] = useState(false);
    const [editedSummary, setEditedSummary] = useState('');
    const [isSaving, setIsSaving] = useState(false);

    // Get unique PMs from all pods for the dropdown
    const uniquePMs = useMemo(() => {
        if (!allPods || !productManagerField) return [];
        const pmMap = new Map();
        allPods.forEach(pod => {
            const pmValue = pod.getCellValue(productManagerField);
            if (pmValue && pmValue.id) {
                pmMap.set(pmValue.id, { id: pmValue.id, name: pmValue.name || pmValue.email || 'Unknown' });
            }
        });
        return Array.from(pmMap.values()).sort((a, b) => a.name.localeCompare(b.name));
    }, [allPods, productManagerField]);

    // Filter pods based on PM filter
    const filteredPods = useMemo(() => {
        if (!podTable || !allPods) return [];

        return allPods.filter(pod => {
            // PM filter
            if (pmFilter !== 'all' && productManagerField) {
                const pmValue = pod.getCellValue(productManagerField);
                if (pmFilter === 'current_user') {
                    if (!pmValue || !currentUser || pmValue.id !== currentUser.id) {
                        return false;
                    }
                } else {
                    // Specific PM selected
                    if (!pmValue || pmValue.id !== pmFilter) {
                        return false;
                    }
                }
            }

            return true;
        });
    }, [allPods, podTable, pmFilter, productManagerField, currentUser]);

    // Auto-select first pod when filtered list changes
    React.useEffect(() => {
        if (filteredPods.length > 0 && (!selectedPodId || !filteredPods.find(p => p.id === selectedPodId))) {
            setSelectedPodId(filteredPods[0].id);
        } else if (filteredPods.length === 0) {
            setSelectedPodId(null);
        }
    }, [filteredPods, selectedPodId]);

    // Reset editing state when selected pod changes
    React.useEffect(() => {
        setIsEditing(false);
        setEditedSummary('');
    }, [selectedPodId]);

    // Start editing
    const handleStartEdit = () => {
        if (selectedPod && summaryField) {
            const currentSummary = selectedPod.getCellValueAsString(summaryField) || '';
            setEditedSummary(currentSummary);
            setIsEditing(true);
        }
    };

    // Cancel editing
    const handleCancelEdit = () => {
        setIsEditing(false);
        setEditedSummary('');
    };

    // Save changes
    const handleSaveEdit = async () => {
        if (!selectedPod || !summaryField || !podTable) return;

        setIsSaving(true);
        try {
            await podTable.updateRecordAsync(selectedPod.id, {
                [summaryField.id]: editedSummary
            });
            setIsEditing(false);
            setEditedSummary('');
        } catch (error) {
            console.error('Error saving summary:', error);
            alert('Failed to save summary. Please try again.');
        } finally {
            setIsSaving(false);
        }
    };

    const selectedPod = filteredPods.find(pod => pod.id === selectedPodId) || filteredPods[0];

    if (!podTable) {
        return (
            <div className="flex items-center justify-center h-screen bg-gray-50 dark:bg-gray-800 p-8">
                <div className="bg-white dark:bg-gray-700 rounded-lg shadow-md p-8 max-w-md">
                    <p className="text-gray-900 dark:text-gray-100">
                        Pod Data table not found.
                    </p>
                </div>
            </div>
        );
    }

    // Dropdown styles
    const selectStyle = "w-full px-3 py-2 bg-white dark:bg-gray-600 border border-gray-300 dark:border-gray-500 rounded-md text-gray-900 dark:text-gray-100 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500";

    return (
        <div className="min-h-screen bg-gray-50 dark:bg-gray-800">
            {/* Header with Filters */}
            <div className="bg-white dark:bg-gray-700 border-b border-gray-200 dark:border-gray-600 sticky top-0 z-10">
                <div className="px-6 py-4">
                    <div className="flex flex-wrap items-center gap-4">
                        <h1 className="text-xl font-semibold text-gray-900 dark:text-gray-100">
                            Pod Summary
                        </h1>

                        {/* PM Filter */}
                        <div className="flex items-center gap-2">
                            <label className="text-sm font-medium text-gray-700 dark:text-gray-300">
                                PM:
                            </label>
                            <select
                                value={pmFilter}
                                onChange={(e) => setPmFilter(e.target.value)}
                                className={selectStyle}
                                style={{ width: 'auto', minWidth: '150px' }}
                            >
                                <option value="current_user">My Pods</option>
                                <option value="all">All PMs</option>
                                {uniquePMs.map(pm => (
                                    <option key={pm.id} value={pm.id}>{pm.name}</option>
                                ))}
                            </select>
                        </div>

                        {/* Pod Filter */}
                        <div className="flex items-center gap-2">
                            <label className="text-sm font-medium text-gray-700 dark:text-gray-300">
                                Pod:
                            </label>
                            <select
                                value={selectedPodId || ''}
                                onChange={(e) => setSelectedPodId(e.target.value || null)}
                                className={selectStyle}
                                style={{ width: 'auto', minWidth: '200px' }}
                            >
                                {filteredPods.length === 0 ? (
                                    <option value="">No pods available</option>
                                ) : (
                                    filteredPods.map(pod => {
                                        const podName = podNameField ? pod.getCellValueAsString(podNameField) : 'Unnamed Pod';
                                        return (
                                            <option key={pod.id} value={pod.id}>{podName}</option>
                                        );
                                    })
                                )}
                            </select>
                        </div>

                        <span className="text-sm text-gray-500 dark:text-gray-400">
                            {filteredPods.length} {filteredPods.length === 1 ? 'pod' : 'pods'}
                        </span>
                    </div>
                </div>
            </div>

            {/* Full Width Summary Content */}
            <div className="p-6">
                {selectedPod ? (
                    <div className="bg-white dark:bg-gray-700 rounded-lg shadow-md p-8">
                        <div className="flex items-center justify-between mb-6">
                            <h2 className="text-3xl font-bold text-gray-900 dark:text-gray-100">
                                {podNameField ? selectedPod.getCellValueAsString(podNameField) : 'Pod Summary'}
                            </h2>
                            {summaryField && !isEditing && (
                                <button
                                    onClick={handleStartEdit}
                                    className="px-4 py-2 text-sm bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors"
                                >
                                    Edit Summary
                                </button>
                            )}
                        </div>

                        {summaryField ? (
                            <div className="prose dark:prose-invert max-w-none">
                                {isEditing ? (
                                    <div className="space-y-4">
                                        <textarea
                                            value={editedSummary}
                                            onChange={(e) => setEditedSummary(e.target.value)}
                                            className="w-full h-96 px-4 py-3 bg-white dark:bg-gray-600 border border-gray-300 dark:border-gray-500 rounded-md text-gray-900 dark:text-gray-100 text-base focus:outline-none focus:ring-2 focus:ring-blue-500 resize-y"
                                            placeholder="Enter the pod summary..."
                                            disabled={isSaving}
                                        />
                                        <div className="flex gap-3">
                                            <button
                                                onClick={handleSaveEdit}
                                                disabled={isSaving}
                                                className="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
                                            >
                                                {isSaving ? 'Saving...' : 'Save'}
                                            </button>
                                            <button
                                                onClick={handleCancelEdit}
                                                disabled={isSaving}
                                                className="px-4 py-2 bg-gray-200 dark:bg-gray-600 text-gray-700 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-500 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
                                            >
                                                Cancel
                                            </button>
                                        </div>
                                    </div>
                                ) : (
                                    <div>
                                        {selectedPod.getCellValue(summaryField) ? (
                                            <div className="text-gray-800 dark:text-gray-200 whitespace-pre-wrap leading-relaxed">
                                                <CellRenderer record={selectedPod} field={summaryField} />
                                            </div>
                                        ) : (
                                            <div className="text-center py-12">
                                                <p className="text-gray-500 dark:text-gray-400">
                                                    No monthly summary available for this pod. Click "Edit Summary" to add one.
                                                </p>
                                            </div>
                                        )}
                                    </div>
                                )}
                            </div>
                        ) : (
                            <div className="text-center py-12">
                                <p className="text-gray-500 dark:text-gray-400">
                                    Summary field not found.
                                </p>
                            </div>
                        )}
                    </div>
                ) : (
                    <div className="flex items-center justify-center h-64">
                        <p className="text-gray-500 dark:text-gray-400">
                            {filteredPods.length === 0
                                ? (pmFilter === 'current_user'
                                    ? "No pods found where you are the Product Manager."
                                    : "No pods match the current filters.")
                                : "Select a pod to view its monthly summary"}
                        </p>
                    </div>
                )}
            </div>
        </div>
    );
}

initializeBlock({ interface: () => <PodMonthlySummaryApp /> });
